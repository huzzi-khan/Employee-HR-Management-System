<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Payroll Records - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Payroll Records</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/payroll/add" class="btn-primary">Add New Payroll Record</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (payrolls.length === 0) { %>
                <p class="no-data">No payroll records found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Payroll ID</th>
                            <th>Employee</th>
                            <th>Pay Period</th>
                            <th>Gross Pay</th>
                            <th>Deductions</th>
                            <th>Net Pay</th>
                            <th>Date Paid</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% payrolls.forEach(payroll => { %>
                            <tr>
                                <td><%= payroll.PayrollID %></td>
                                <td><%= payroll.EmployeeName %> (ID: <%= payroll.EmployeeID %>)</td>
                                <td><%= payroll.PayPeriodStartDate.toISOString().split('T')[0] %> to <%= payroll.PayPeriodEndDate.toISOString().split('T')[0] %></td>
                                <td>Rs. <%= payroll.GrossPay.toLocaleString() %></td>
                                <td>Rs. <%= payroll.Deductions.toLocaleString() %></td>
                                <td>Rs. <%= payroll.NetPay.toLocaleString() %></td>
                                <td><%= payroll.DatePaid.toISOString().split('T')[0] %></td>
                                <td class="action-buttons">
                                    <a href="/payroll/details/<%= payroll.PayrollID %>" class="btn-view">View</a>
                                    <a href="/payroll/edit/<%= payroll.PayrollID %>" class="btn-edit">Edit</a>
                                    <a href="/payroll/delete/<%= payroll.PayrollID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>