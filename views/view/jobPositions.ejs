<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Job Positions - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>All Job Positions</h1>
        
        <div class="button-group">
            <a href="/forms/job-position" class="btn-primary">Add New Job Position</a>
            <a href="/" class="btn-secondary">Back to Home</a>
        </div>
        
        <% if (jobPositions.length === 0) { %>
            <p class="no-data">No job positions found.</p>
        <% } else { %>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Job Title</th>
                        <th>Min Salary</th>
                        <th>Max Salary</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% jobPositions.forEach(job => { %>
                        <tr>
                            <td><%= job.JobID %></td>
                            <td><%= job.JobTitle %></td>
                            <td>Rs. <%= job.MinSalary.toLocaleString() %></td>
                            <td>Rs. <%= job.MaxSalary.toLocaleString() %></td>
                            <td class="action-buttons">
                                <a href="/job-positions/<%= job.JobID %>" class="btn-view">View</a>
                                <a href="/job-positions/<%= job.JobID %>/edit" class="btn-edit">Edit</a>
                                <a href="/job-positions/<%= job.JobID %>/delete" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>