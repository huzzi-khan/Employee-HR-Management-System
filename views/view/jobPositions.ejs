<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Job Positions - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Job Positions</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/jobPosition/add" class="btn-primary">Add New Job Position</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (jobPositions.length === 0) { %>
                <p class="no-data">No job positions found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Job ID</th>
                            <th>Job Title</th>
                            <th>Min Salary</th>
                            <th>Max Salary</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% jobPositions.forEach(job => { %>
                            <tr>
                                <td><%= job.JobID %></td>
                                <td><%= job.JobTitle %></td>
                                <td>Rs. <%= job.MinSalary.toLocaleString() %></td>
                                <td>Rs. <%= job.MaxSalary.toLocaleString() %></td>
                                <td class="action-buttons">
                                    <a href="/jobPosition/details/<%= job.JobID %>" class="btn-view">View</a>
                                    <a href="/jobPosition/edit/<%= job.JobID %>" class="btn-edit">Edit</a>
                                    <a href="/jobPosition/delete/<%= job.JobID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>