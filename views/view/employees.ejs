<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Employees - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Employees</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/employee/add" class="btn-primary">Add New Employee</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (employees.length === 0) { %>
                <p class="no-data">No employees found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Employee ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Department</th>
                            <th>Job Position</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% employees.forEach(emp => { %>
                            <tr>
                                <td><%= emp.EmployeeID %></td>
                                <td><%= emp.FirstName %> <%= emp.LastName %></td>
                                <td><%= emp.Email %></td>
                                <td><%= emp.DeptName %></td>
                                <td><%= emp.JobTitle %></td>
                                <td><span class="status-badge status-<%= emp.Status.toLowerCase().replace(' ', '-') %>"><%= emp.Status %></span></td>
                                <td class="action-buttons">
                                    <a href="/employee/details/<%= emp.EmployeeID %>" class="btn-view">View</a>
                                    <a href="/employee/edit/<%= emp.EmployeeID %>" class="btn-edit">Edit</a>
                                    <a href="/employee/delete/<%= emp.EmployeeID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>