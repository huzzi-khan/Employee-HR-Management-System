<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Employee Training Records - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Employee Training Records</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/employeeTraining/add" class="btn-primary">Add New Training Record</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (employeeTrainings.length === 0) { %>
                <p class="no-data">No employee training records found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Training Session</th>
                            <th>Completion Date</th>
                            <th>Grade</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% employeeTrainings.forEach(employeeTraining => { %>
                            <tr>
                                <td><%= employeeTraining.EmployeeName %> (ID: <%= employeeTraining.EmployeeID %>)</td>
                                <td><%= employeeTraining.SessionTitle %> (ID: <%= employeeTraining.TrainingID %>)</td>
                                <td><%= employeeTraining.CompletionDate ? employeeTraining.CompletionDate.toISOString().split('T')[0] : 'Not Completed' %></td>
                                <td><%= employeeTraining.Grade || 'N/A' %></td>
                                <td class="action-buttons">
                                    <a href="/employeeTraining/details/<%= employeeTraining.EmployeeID %>/<%= employeeTraining.TrainingID %>" class="btn-view">View</a>
                                    <a href="/employeeTraining/edit/<%= employeeTraining.EmployeeID %>/<%= employeeTraining.TrainingID %>" class="btn-edit">Edit</a>
                                    <a href="/employeeTraining/delete/<%= employeeTraining.EmployeeID %>/<%= employeeTraining.TrainingID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>