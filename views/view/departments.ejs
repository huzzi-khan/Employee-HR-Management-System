<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Departments - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Departments</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/department/add" class="btn-primary">Add New Department</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (departments.length === 0) { %>
                <p class="no-data">No departments found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Dept ID</th>
                            <th>Department Name</th>
                            <th>Location</th>
                            <th>Manager</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% departments.forEach(dept => { %>
                            <tr>
                                <td><%= dept.DeptID %></td>
                                <td><%= dept.DeptName %></td>
                                <td><%= dept.Location || 'N/A' %></td>
                                <td><%= dept.ManagerName || 'No Manager' %></td>
                                <td class="action-buttons">
                                    <a href="/department/details/<%= dept.DeptID %>" class="btn-view">View</a>
                                    <a href="/department/edit/<%= dept.DeptID %>" class="btn-edit">Edit</a>
                                    <a href="/department/delete/<%= dept.DeptID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>
