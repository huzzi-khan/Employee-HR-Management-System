<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Departments - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>All Departments</h1>
        
        <div class="button-group">
            <a href="/forms/department" class="btn-primary">Add New Department</a>
            <a href="/" class="btn-secondary">Back to Home</a>
        </div>
        
        <% if (departments.length === 0) { %>
            <p class="no-data">No departments found.</p>
        <% } else { %>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Dept ID</th>
                        <th>Department Name</th>
                        <th>Location</th>
                        <th>Manager</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% departments.forEach(dept => { %>
                        <tr>
                            <td><%= dept.DeptID %></td>
                            <td><%= dept.DeptName %></td>
                            <td><%= dept.Location || 'N/A' %></td>
                            <td><%= dept.ManagerName || 'No Manager' %></td>
                            <td class="action-buttons">
                                <a href="/departments/<%= dept.DeptID %>" class="btn-view">View</a>
                                <a href="/departments/<%= dept.DeptID %>/edit" class="btn-edit">Edit</a>
                                <a href="/departments/<%= dept.DeptID %>/delete" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>