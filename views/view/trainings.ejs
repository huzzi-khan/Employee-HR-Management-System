<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Training Sessions - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Training Sessions</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/training/add" class="btn-primary">Add New Training Session</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (trainings.length === 0) { %>
                <p class="no-data">No training sessions found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Training ID</th>
                            <th>Session Title</th>
                            <th>Instructor</th>
                            <th>Session Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% trainings.forEach(training => { %>
                            <tr>
                                <td><%= training.TrainingID %></td>
                                <td><%= training.SessionTitle %></td>
                                <td><%= training.Instructor %></td>
                                <td><%= training.SessionDate.toISOString().split('T')[0] %></td>
                                <td class="action-buttons">
                                    <a href="/training/details/<%= training.TrainingID %>" class="btn-view">View</a>
                                    <a href="/training/edit/<%= training.TrainingID %>" class="btn-edit">Edit</a>
                                    <a href="/training/delete/<%= training.TrainingID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>