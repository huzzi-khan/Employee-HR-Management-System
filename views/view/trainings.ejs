<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Training Sessions - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>All Training Sessions</h1>
        
        <div class="button-group">
            <a href="/forms/training" class="btn-primary">Add New Training Session</a>
            <a href="/" class="btn-secondary">Back to Home</a>
        </div>
        
        <% if (trainings.length === 0) { %>
            <p class="no-data">No training sessions found.</p>
        <% } else { %>
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Training ID</th>
                        <th>Session Title</th>
                        <th>Instructor</th>
                        <th>Session Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% trainings.forEach(training => { %>
                        <tr>
                            <td><%= training.TrainingID %></td>
                            <td><%= training.SessionTitle %></td>
                            <td><%= training.Instructor %></td>
                            <td><%= training.SessionDate.toISOString().split('T')[0] %></td>
                            <td class="action-buttons">
                                <a href="/trainings/<%= training.TrainingID %>" class="btn-view">View</a>
                                <a href="/trainings/<%= training.TrainingID %>/edit" class="btn-edit">Edit</a>
                                <a href="/trainings/<%= training.TrainingID %>/delete" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } %>
    </div>
</body>
</html>