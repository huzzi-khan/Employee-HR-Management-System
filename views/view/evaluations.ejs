<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Performance Evaluations - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <h1>All Performance Evaluations</h1>
            
            <% if (success) { %>
                <div class="success-message"><%= success %></div>
            <% } %>
            
            <% if (error) { %>
                <div class="error-message"><%= error %></div>
            <% } %>
            
            <div class="button-group">
                <a href="/evaluation/add" class="btn-primary">Add New Evaluation</a>
                <a href="/" class="btn-secondary">Back to Home</a>
            </div>
            
            <% if (evaluations.length === 0) { %>
                <p class="no-data">No performance evaluations found.</p>
            <% } else { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Evaluation ID</th>
                            <th>Employee</th>
                            <th>Reviewer</th>
                            <th>Evaluation Date</th>
                            <th>Rating</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% evaluations.forEach(eval => { %>
                            <tr>
                                <td><%= eval.EvaluationID %></td>
                                <td><%= eval.EmployeeName %> (ID: <%= eval.EmployeeID %>)</td>
                                <td><%= eval.ReviewerName %> (ID: <%= eval.ReviewerID %>)</td>
                                <td><%= eval.EvaluationDate.toISOString().split('T')[0] %></td>
                                <td><strong><%= eval.Rating %></strong> / 5.0</td>
                                <td class="action-buttons">
                                    <a href="/evaluation/details/<%= eval.EvaluationID %>" class="btn-view">View</a>
                                    <a href="/evaluation/edit/<%= eval.EvaluationID %>" class="btn-edit">Edit</a>
                                    <a href="/evaluation/delete/<%= eval.EvaluationID %>" class="btn-delete">Delete</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } %>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>