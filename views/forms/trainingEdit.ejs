<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Training Session - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="form-container">
                <h2><%= title %></h2>
                
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-error">
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <form method="POST" action="/training/edit/<%= formData.TrainingID %>" class="form">
                    <div class="form-group">
                        <label for="sessionTitle">Session Title *</label>
                        <input 
                            type="text" 
                            id="sessionTitle" 
                            name="sessionTitle" 
                            value="<%= formData.SessionTitle || '' %>"
                            required
                            placeholder="e.g., Cybersecurity Awareness Training"
                        >
                    </div>

                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea 
                            id="description" 
                            name="description" 
                            rows="5"
                            placeholder="Provide details about the training session..."
                        ><%= formData.Description || '' %></textarea>
                    </div>

                    <div class="form-group">
                        <label for="instructor">Instructor *</label>
                        <input 
                            type="text" 
                            id="instructor" 
                            name="instructor" 
                            value="<%= formData.Instructor || '' %>"
                            required
                            placeholder="e.g., Dr. Ahmed Salman"
                        >
                    </div>

                    <div class="form-group">
                        <label for="sessionDate">Session Date *</label>
                        <input 
                            type="date" 
                            id="sessionDate" 
                            name="sessionDate" 
                            value="<%= formData.SessionDate ? formData.SessionDate.toISOString().split('T')[0] : '' %>"
                            min="2020-01-01"
                            required
                        >
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Update Training Session</button>
                        <a href="/training/details/<%= formData.TrainingID %>" class="btn btn-secondary">Cancel</a>
                        <a href="/training/view" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>