<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="form-container">
                <h2><%= title %></h2>
                
                <% if (success) { %>
                    <div class="alert alert-success"><%= success %></div>
                <% } %>
                
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-error">
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <form method="POST" action="/evaluation/add" class="form">
                    <div class="form-group">
                        <label for="employeeId">Employee Being Evaluated *</label>
                        <select id="employeeId" name="employeeId" required>
                            <option value="">-- Select Employee --</option>
                            <% employees.forEach(emp => { %>
                                <option value="<%= emp.EmployeeID %>" 
                                        <%= formData.employeeId == emp.EmployeeID ? 'selected' : '' %>>
                                    <%= emp.FirstName %> <%= emp.LastName %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="reviewerId">Reviewer (Manager/Supervisor) *</label>
                        <select id="reviewerId" name="reviewerId" required>
                            <option value="">-- Select Reviewer --</option>
                            <% employees.forEach(emp => { %>
                                <option value="<%= emp.EmployeeID %>" 
                                        <%= formData.reviewerId == emp.EmployeeID ? 'selected' : '' %>>
                                    <%= emp.FirstName %> <%= emp.LastName %>
                                </option>
                            <% }); %>
                        </select>
                        <small style="color: #666; font-size: 0.85rem;">
                            Note: Reviewer must be different from the employee being evaluated
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="rating">Performance Rating (1.0 - 5.0) *</label>
                        <input 
                            type="number" 
                            id="rating" 
                            name="rating" 
                            value="<%= formData.rating || '' %>"
                            step="0.1"
                            min="1.0"
                            max="5.0"
                            required
                            placeholder="e.g., 4.5"
                        >
                        <small style="color: #666; font-size: 0.85rem;">
                            1.0 = Poor, 2.0 = Below Average, 3.0 = Average, 4.0 = Good, 5.0 = Excellent
                        </small>
                    </div>

                    <div class="form-group">
                        <label for="comments">Comments</label>
                        <textarea 
                            id="comments" 
                            name="comments" 
                            rows="5"
                            placeholder="Provide detailed feedback on the employee's performance, strengths, and areas for improvement..."
                        ><%= formData.comments || '' %></textarea>
                    </div>

                    <div class="form-group">
                        <p style="color: #666; font-size: 0.9rem;">
                            <strong>Note:</strong> Evaluation Date will be automatically set to today's date.
                        </p>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Add Evaluation</button>
                        <a href="/" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>

    <script>
        // Client-side validation to prevent reviewer from being same as employee
        document.querySelector('form').addEventListener('submit', function(e) {
            const employeeId = document.getElementById('employeeId').value;
            const reviewerId = document.getElementById('reviewerId').value;
            
            if (employeeId && reviewerId && employeeId === reviewerId) {
                e.preventDefault();
                alert('Error: Reviewer cannot be the same as the employee being evaluated!');
            }
        });
    </script>
</body>
</html>