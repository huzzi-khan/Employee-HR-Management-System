<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Department - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Edit Department</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        
        <form action="/departments/<%= department.DeptID %>/edit" method="POST">
            <div class="form-group">
                <label for="deptName">Department Name *</label>
                <input type="text" id="deptName" name="deptName" value="<%= department.DeptName %>" required>
            </div>
            
            <div class="form-group">
                <label for="location">Location</label>
                <input type="text" id="location" name="location" value="<%= department.Location || '' %>">
            </div>
            
            <div class="form-group">
                <label for="managerID">Manager</label>
                <select id="managerID" name="managerID">
                    <option value="">-- No Manager --</option>
                    <% employees.forEach(emp => { %>
                        <option value="<%= emp.EmployeeID %>" 
                            <%= department.ManagerID == emp.EmployeeID ? 'selected' : '' %>>
                            <%= emp.FirstName %> <%= emp.LastName %> (ID: <%= emp.EmployeeID %>)
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn-primary">Update Department</button>
                <a href="/departments/<%= department.DeptID %>" class="btn-secondary">Cancel</a>
                <a href="/departments" class="btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</body>
</html>