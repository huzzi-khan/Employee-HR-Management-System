<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Attendance - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Edit Attendance Record</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        
        <form action="/attendance/<%= attendance.AttendanceID %>/edit" method="POST">
            <div class="form-group">
                <label for="employeeID">Employee *</label>
                <select id="employeeID" name="employeeID" required>
                    <% employees.forEach(emp => { %>
                        <option value="<%= emp.EmployeeID %>" <%= attendance.EmployeeID == emp.EmployeeID ? 'selected' : '' %>>
                            <%= emp.FirstName %> <%= emp.LastName %> (ID: <%= emp.EmployeeID %>)
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="workDate">Work Date *</label>
                <input type="date" id="workDate" name="workDate" value="<%= attendance.WorkDate.toISOString().split('T')[0] %>" required>
            </div>
            
            <div class="form-group">
                <label for="timeIn">Time In *</label>
                <input type="time" id="timeIn" name="timeIn" value="<%= attendance.TimeIn %>" required>
            </div>
            
            <div class="form-group">
                <label for="timeOut">Time Out</label>
                <input type="time" id="timeOut" name="timeOut" value="<%= attendance.TimeOut || '' %>">
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn-primary">Update Attendance</button>
                <a href="/attendance/<%= attendance.AttendanceID %>" class="btn-secondary">Cancel</a>
                <a href="/attendance" class="btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</body>
</html>