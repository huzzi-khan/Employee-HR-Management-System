<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1 class="logo">HR Management System</h1>
            <div class="nav-links">
                <a href="/">Home</a>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="form-container">
                <h2><%= title %></h2>
                
                <% if (errors && errors.length > 0) { %>
                    <div class="alert alert-error">
                        <ul>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                            <% }); %>
                        </ul>
                    </div>
                <% } %>

                <form method="POST" action="/attendance/edit/<%= formData.AttendanceID %>" class="form">
                    <div class="form-group">
                        <label for="employeeId">Employee *</label>
                        <select id="employeeId" name="employeeId" required>
                            <option value="">-- Select Employee --</option>
                            <% employees.forEach(emp => { %>
                                <option value="<%= emp.EmployeeID %>" 
                                        <%= formData.EmployeeID == emp.EmployeeID ? 'selected' : '' %>>
                                    <%= emp.FirstName %> <%= emp.LastName %>
                                </option>
                            <% }); %>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="workDate">Work Date *</label>
                        <input 
                            type="date" 
                            id="workDate" 
                            name="workDate" 
                            value="<%= formData.WorkDate ? formData.WorkDate.toISOString().split('T')[0] : '' %>"
                            required
                        >
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label for="timeIn">Time In (HH:MM) *</label>
                            <input 
                                type="time" 
                                id="timeIn" 
                                name="timeIn" 
                                value="<%= formData.TimeIn || '' %>"
                                required
                            >
                        </div>
                        <div class="form-group">
                            <label for="timeOut">Time Out (HH:MM)</label>
                            <input 
                                type="time" 
                                id="timeOut" 
                                name="timeOut" 
                                value="<%= formData.TimeOut || '' %>"
                            >
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Update Attendance</button>
                        <a href="/attendance/details/<%= formData.AttendanceID %>" class="btn btn-secondary">Cancel</a>
                        <a href="/attendance/view" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 HR Management System</p>
        </div>
    </footer>
</body>
</html>