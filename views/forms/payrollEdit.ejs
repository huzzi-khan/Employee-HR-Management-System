<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Payroll Record - HR Management</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>Edit Payroll Record</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>
        
        <form action="/payroll/<%= payroll.PayrollID %>/edit" method="POST">
            <div class="form-group">
                <label for="employeeID">Employee *</label>
                <select id="employeeID" name="employeeID" required>
                    <% employees.forEach(emp => { %>
                        <option value="<%= emp.EmployeeID %>" <%= payroll.EmployeeID == emp.EmployeeID ? 'selected' : '' %>>
                            <%= emp.FirstName %> <%= emp.LastName %> (ID: <%= emp.EmployeeID %>)
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-row">
                <div class="form-group">
                    <label for="payPeriodStartDate">Pay Period Start *</label>
                    <input type="date" id="payPeriodStartDate" name="payPeriodStartDate" value="<%= payroll.PayPeriodStartDate.toISOString().split('T')[0] %>" required>
                </div>
                
                <div class="form-group">
                    <label for="payPeriodEndDate">Pay Period End *</label>
                    <input type="date" id="payPeriodEndDate" name="payPeriodEndDate" value="<%= payroll.PayPeriodEndDate.toISOString().split('T')[0] %>" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="grossPay">Gross Pay *</label>
                <input type="number" id="grossPay" name="grossPay" step="0.01" min="0" value="<%= payroll.GrossPay %>" required>
            </div>
            
            <div class="form-group">
                <label for="deductions">Deductions *</label>
                <input type="number" id="deductions" name="deductions" step="0.01" min="0" value="<%= payroll.Deductions %>" required>
            </div>
            
            <div class="form-group">
                <label for="netPay">Net Pay *</label>
                <input type="number" id="netPay" name="netPay" step="0.01" min="0" value="<%= payroll.NetPay %>" required>
            </div>
            
            <div class="form-group">
                <label for="datePaid">Date Paid *</label>
                <input type="date" id="datePaid" name="datePaid" value="<%= payroll.DatePaid.toISOString().split('T')[0] %>" required>
            </div>
            
            <div class="button-group">
                <button type="submit" class="btn-primary">Update Payroll Record</button>
                <a href="/payroll/<%= payroll.PayrollID %>" class="btn-secondary">Cancel</a>
                <a href="/payroll" class="btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</body>
</html>